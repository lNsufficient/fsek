<% provide(:title, 'Bilbokning') %>
	<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 reg-page">		
		<div class="row">		
			<%= form_for([:car,@rent]) do |f| %>			
				<% if @rent.errors.any? %>
				    <div id="error_explanation" class="coming-soon">
				      <h4>Något hindrar bokningen från att sparas:</h4>
				      <ul class="" style="list-style:none;">
				      	<% @rent.errors.full_messages.each do |msg| %>
				        	<li><%= msg %></li>
			      		<% end %>
				      </ul>
			    	</div>
			  	<% end %>
			  	<div class="center">
			  			<h1>Användarvillkor:</h1>
			  			Lite text.<br>
			  			Hej.<br>
			  			Hur går detta?
			  		</div>
			  	<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 center">			  		
		  			<%= f.label 'Jag accepterar villkoren för hyrning av F-bilen.', :class => 'reg-label'%><br>
		  			<%= f.check_box :disclaimer ,id: "accepted_disclaimer"%><br><br>
		  			<div class="after_disclaimer" style="display:none;">
					    <%= f.label 'Namn & Efternamn', :class => 'reg-label'%>
					  	<div class="margin-bottom-20">  		
					  		<div class="col-md-6"><%= f.text_field :name,:class => 'form-control' %></div><div class="col-md-6"> <%= f.text_field :lastname,:class => 'form-control' %></div> 
					  	</div>	  	
					  	<%= f.label 'E-post', :class => 'reg-label'%>
					  	<div class="margin-bottom-20">  		
				  			<%= f.text_field :email,:class => 'form-control' %>
					  	</div>
					  	<%= f.label 'Telefon', :class => 'reg-label'%>
					  	<div class="margin-bottom-20">  		
				  			<%= f.text_field :phone,:class => 'form-control' %>
					  	</div>			  	
				  		<%= f.label 'Syfte', :class => 'reg-label'%>		
					  	<div class="margin-bottom-20">
				  			<%= f.text_area :purpose, class: "form-control"%>
					  	</div>
					  	<%= f.label 'Från', :class => 'reg-label'%>		
					  	<div class="margin-bottom-20">
				  			<%= f.datetime_select :from,:class => 'form-control' %>
					  	</div>
					  	<%= f.label 'Till', :class => 'reg-label'%>		
					  	<div class="margin-bottom-20">
				  			<%= f.datetime_select :til,:class => 'form-control' %>
					  	</div>
					  	<div class="row">					  			  		
					  			<%= f.submit "Spara", class: "btn btn-u form-control", data:{ confirm: 'Du accepterar nu F-sektionens avtal vid hyrning av F-bilen.'}%>	 				
					  	</div>
			  		</div>
		  		</div>
			<%end%>
		</div>		
	</div>
<script>
	$("input[type='checkbox']#accepted_disclaimer").on('change', function(){
  $('.after_disclaimer').toggle();
});
</script>